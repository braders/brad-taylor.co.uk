---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import Nav from '../components/Nav.astro'


// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = 'Bradley Taylor | Web Engineer';
let description = 'Bradley is a web engineer focussed on building performant, accessible and pleasing high-quality web experiences.';
let permalink = Astro.request.canonicalURL;
---
<html lang="en">
	<head>
		<BaseHead title={title} description={description} permalink={permalink} />
	</head>

	<body>
        <header>
            <Nav />
            <div class='biolines'>
                <h1>Ooops, that's a <strong>404</strong></h1>
                <p>I suggest you make your way back to the homepage.</p>
            </div>
        </header>
	</body>
</html>

<style>
header {
    height: 100vh;
    
    background: rgb(66,212,237);
    background: linear-gradient(180deg, rgb(0, 43, 127) 0%, rgb(8, 63, 141) 40%, #0693e388 100%);
    background: linear-gradient(180deg, rgba(0,43,127,1) 0%, rgba(8,63,141,1) 40%, rgba(66,212,237,1) 100%);
    color: white;
    padding: 0 2rem;
}
.biolines {
    position: relative;
    top: 50%;
    transform: translate(0, -50%);
    text-align: center;
}
.biolines p {
    font-size: 2.5rem;
    max-width: 550px;
    margin: 0 auto;
    line-height: 1.4;
}

h1 {
    font-family: 'Lobster', sans-serif;
    font-size: 8rem;
    margin-bottom: 4rem;
}
h1 strong {
    color: #ffbf00;
}

@media (min-width: 800px) {

}
</style>